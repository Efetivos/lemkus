.   
    {% schema %}
        {
            "name": "INDEX | Dropping Soon",
            "class": "soon-index",
            "settings": [
                
                {
                    "id": "coming",
                    "type": "text",
                    "label": "Coming",
                    "default": "COMING SOON"
                },
                {
                    "id": "img_coming",
                    "type": "image_picker",
                    "label": "Image Coming"
                },
                {
                    "id": "title_coming",
                    "type": "text",
                    "label": "Title Coming"
                },
                {
                    "id": "url_coming",
                    "type": "url",
                    "label": "Link Coming"
                },
                {
                    "type": "color",
                    "id": "color_text_coming",
                    "label": "Color Text",
                    "default": "#ffffff"
                },
                {
                    "id": "soon_index",
                    "type": "collection",
                    "label": "Collection"
                },
                {
                    "id": "text_soon",
                    "type": "text",
                    "label": "Text soon",
                    "default": "DROPPPING SOON"
                }
            ]
        }
    {% endschema %}


section.soon-index.e-wvw
    .soon-index__hold.e-hold
        h1.dharma {{ section.settings.text_soon }}
        .soon-index__coming
            .soon-index__coming__hold.e-wp.e-hp.e-rel
                .soon-index__coming__img
                    img(src="{{ section.settings.img_coming | img_url: 'master' }}", alt='{{ section.settings.img_coming.alt | escape }}').img-load
                .soon-index__coming__texts
                    span.recosemi(style="color:{{ section.settings.color_text_coming }}") {{ section.settings.coming}}
                    a(href="{{ section.settings.url_coming }}", title="{{ section.settings.title_coming }}", style="color:{{ section.settings.color_text_coming }}").dharma {{ section.settings.title_coming }}
        

| {% assign soon_col = collections[section.settings.soon_index] %}
section.soon-collect-index
    .soon-collect-index__hold
        | {% for item in soon_col.products limit:5 %}
        
        //- calling prod
        |   {% render 'product-card' prod: item %}

        | {% endfor %}
        .prod-card__each
            a(href="#").recosemi VIEW ALL 
        


