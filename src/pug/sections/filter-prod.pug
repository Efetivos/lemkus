nav.filter-prod.no-desk.el-fix
    .filter-prod__hold 

        //- sneakers
        .filter-prod__menu.menu__sneakers
            .filter-prod__title SNEAKERS
            .filter-prod__drop
                span.dharma ALL
                ul
                    |   {% for link in linklists[settings.link_all_sneakers].links %}
                    li 
