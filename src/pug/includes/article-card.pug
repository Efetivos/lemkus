.article-card__each
    .article-card__hold.js-find-hover
        .article-card__img
            a(href="{{ art.url }}", title="{{ art.title }}").hover-img
                img(src="{{ art.image.src | img_url: 'master' }}" alt="{{ art.title }}").img-load
                
            .article-card__cat-date 
                |   {% if art.tags.size > 0 %}
                .cat {% for tag in art.tags %}{{ tag }}{% endfor %} - 
                |   {% endif %}
                .date {{ art.created_at | date: "%d.%m.%y" }}

    

        a.article-card__title(href="{{ art.url }}", title="{{ art.title }}").hover-img-js {{ art.title }}