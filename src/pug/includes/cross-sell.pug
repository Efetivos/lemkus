section.dropping-card.dropping-card-regular.no-mobile
    |   {% assign count = 0 %}
    |   {% assign $id_high = '' %}
    |   {% for related in collection.products limit:8 %}
    |   {% if related.id != $id and related.type == type and count < 1 %}
    .dropping-card__hold.js-find-hover
        |   {% assign $id_high = related.id %}

        //- BG
        .dropping-card__bg(style="background:#eaeaea")

        .dropping-card__infos
            //- CARD
            .dropping-card__logo 
                //img(src="{{ section.settings.img_logo_brand | img_url: 'master' }}", alt='{{ section.settings.img_logo_brand.alt | escape }}').img-load

            //- TITLE
            a(href="{{ related.url | within: collection }}").dropping-card__title.dharma {{ related.title }}

            //- PRICE
            .dropping-card__price.recosemi {{ related.price | money }}

            //- INFOS
            .dropping-card__infos__img.no-desk
                a(href="{{ related.url | within: collection }}") 
                    img(src="{{  related.featured_image.src  | img_url: 'master' }}" alt="{{ related.src | escape }}").img-load

            a(href="{{ related.url | within: collection }}").dropping-card__notify.btn-hover.cream-v
                    span.static VIEW PRODUCT
                    span.hover(data-hover="VIEW PRODUCT      VIEW PRODUCT      ") VIEW PRODUCT      VIEW PRODUCT      


        .dropping-card__img.no-mobile.hover-img
            a(href="{{ related.url | within: collection }}").hover-img
                img(src="{{  related.featured_image.src  | img_url: 'master' }}" alt="{{ related.src | escape }}").img-load

    |   {% assign count = count | plus: 1 %}
    |   {% endif %}
    |   {% endfor %}











