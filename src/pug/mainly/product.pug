.page.page-product(data-barba="container", data-barba-namespace="product", data-ispage="product", data-scroll-content)
    header.header-prod
        .header-prod__bread
            |   {% render 'breadcrumbs' %}
        .header-prod__hold

            //- _____ thumbs
            .header-prod__thumbs
                .header-prod__thumbs__travel
                    |   {% for image in product.images %}
                    .header-prod__thumbs__each
                        img(src="{{ image.src | img_url: 'master' }}" alt="{{ image.alt | escape }}" ).img-load
                    |   {% endfor %}

            //- _____ gallery
            .header-prod__gallery
                .header-prod__gallery__travel
                    |   {% for image in product.images %}
                    .header-prod__gallery__each
                        img(src="{{ image.src | img_url: 'master' }}" alt="{{ image.alt | escape }}" ).img-load
                    |   {% endfor %}
                
            //- _____ infos
            .header-prod__infos
                //-  title
                h1.header-prod__title.dharmaex.e-upper {{ product.title }}

                //-  prices
                | {% if product.compare_at_price_max != 0 %}
                span.sale-price {{ product.compare_at_price_max  | money_without_trailing_zeros  }}
                | {% endif %}
                .regular-price {{ product.price | money_without_trailing_zeros }}


                |   {% render 'add-to-cart' %}

                //-  descrip
                .prod-descr
                    | {{ product.content }}
        

    main.main-prod



        section.may-also
            span.dharma RECOMMENDED
            |   {% render 'cross-sell' %}



    | {% render  'myfooter' %}