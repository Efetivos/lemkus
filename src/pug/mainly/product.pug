.page.page-product(data-barba="container", data-barba-namespace="product", data-ispage="product", data-scroll-content,  class!="{% if product.metafields.drop.drop_month %}dropsoon-product{% endif %}")
    header.header-prod
        .header-prod__bread
            |   {% render 'breadcrumbs' %}
        .header-prod__hold

            //- _____ thumbs
            .header-prod__thumbs
                .header-prod__thumbs__travel
                    |   {% for image in product.images %}
                    .header-prod__thumbs__each
                        img(src="{{ image.src | img_url: 'master' }}" alt="{{ image.alt | escape }}" ).img-load
                    |   {% endfor %}

            //- _____ gallery
            .header-prod__gallery
                .header-prod__gallery__travel
                    |   {% for image in product.images %}
                    .header-prod__gallery__each
                        img(src="{{ image.src | img_url: 'master' }}" alt="{{ image.alt | escape }}" ).img-load
                    |   {% endfor %}
                
            //- _____ infos
            .header-prod__infos
                //-  title
                h1.header-prod__title.dharmaex.e-upper {{ product.title }}  

                //-  prices
                | {% if product.compare_at_price_max != 0 %}
                span.sale-price {{ product.compare_at_price_max  | money  }}
                | {% endif %}
                .regular-price {{ product.price | money }}


                |   {% if product.compare_at_price_max > product.price %}
                |       {{ product.compare_at_price_min | minus: product.price | times: 100.0 |  divided_by: product.compare_at_price_min | money_without_currency | times: 100 | replace: '.0', ''}}
                |   {% endif %}


                |   {% render 'add-to-cart' %}

                //-  descrip
                .prod-descr
                    .prod-descr__content {{ fields.descr.description }} 

                    
                    //- DESIGN
                    .ctn-accord
                        //---- accd
                        .ctn-accord__item
                            .trg-acc.e-curp
                                .svg-arrow !{arrowRight}
                                h5.click DETAILS
                            .hold-content {{ fields.descr.details }}
        
                    //- SIZE
                    .ctn-accord
                        //---- accd
                        .ctn-accord__item
                            .trg-acc.e-curp
                                .svg-arrow !{arrowRight}
                                h5.click Shipping / Returns
                            .hold-content {{ fields.descr.shipping }} 
        

                    //- COUNTDOWN
                    |   {% if product.metafields.drop.drop_month %}
                    |   {% assign drop_day = product.metafields.drop.drop_day %}
