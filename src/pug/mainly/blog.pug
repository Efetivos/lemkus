.page.page-blog(data-ispage="blog", data-scroll-content)
    header

    main
        section.blog-page


            //- BLOG
            |   {% paginate blog.articles by 3 %}
            .blog-page__hold


                .blog-page__list
                    //- only featured
                    |   {% assign count = 0 %}
                    |   {% for article in blog.articles limit: 4 %}
                    |   {% render 'article-card' art: article %}
                    |   {% endfor %}



                    //- =========================  PAGINATES  ========================= -//
                    //- =========================  PAGINATES  ========================= -//
                    | {% if paginate.pages > 1 %}
                    | {%- for part in paginate.parts -%}
                    .main-blog__paginate__each
                        a(href="{{ part.url }}")
                            button.e-serif.t-dark.e-rel.e-curp  {{ part.title }}
                                .line-pagine.line-static.e-gray.e-abs.e-wp
                                | {%- if part.title == paginate.current_page -%}
                                .line-pagine.line-active.e-color.e-abs.e-wp
                                | {%- endif -%}
                    
                    | {%- endfor -%}
                    | {% endif %}
            |   {% endpaginate %}




    | {% render  'myfooter' %}