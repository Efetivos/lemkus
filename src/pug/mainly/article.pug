.page.page-article( data-ispage="article", data-scroll-content)
    | {% assign content = article.content %}
    | {% assign design = '' %}
    | {% assign size = '' %}
    | {% assign details = '' %}

    | {% if article.content contains '---' %}


    | {% assign content = article.content | split: '---' | first %}
    | {% assign description_array = article.content | split: '---' %}
    | {% assign articleInfoKeys = 'Design|Size|Details' | split: '|' %}

    //- assigning keys
    |   {% for key in articleInfoKeys %}
    |   {% assign split_key = key | prepend: '~*~' | append: '~*~' %}
    |       {% if article.content contains split_key %}
    |           {% if key == 'Design' %}
    |               {% assign design = article.content | split: split_key | last | split: '---' | first %}
    |           {% elsif key == 'Size' %}
    |               {% assign size = article.content | split: split_key | last | split: '---' | first %}
    |           {% elsif key == 'Details' %}
    |               {% assign details = article.content | split: split_key | last | split: '---' | first %}
    |           {% endif %}

    |       {% endif %}
    
    |   {% endfor %}


    | {% endif %}

    .e-hvh.e-wvw.e-flex-col
        |   {{ design }}
        |   {{ size }} 
        |   {{ details }} 
    //-header
    //-header
        nav(role="navigation" aria-label="breadcrumbs")
            a(href="{{ shop.url }}") HOME //
            |   {% for tag in article.tags %}
            a(href="{{ blog.url }}/tagged/{{ tag | handle }}") {{ tag }} /
            |   {% endfor %}
            span {{ article.title }}


        img(src="{{ article.image.src | img_url: 'master' }}" alt="{{ article.title }}").img-load
        span.author BY {{ article.author }}
        h1 {{ article.title }}



        main
            section
            |   {{ article.content }}
                    
            section
                |   {% if blog.next_article %}
                a(href="{{ blog.next_article.url }}", title="{{ blog.next_article.title }}")
                    img(src="{{ blog.next_article.image.src | img_url: 'master' }}" alt="{{ blog.next_article.title }}").img-load
                    span {{ blog.next_article.title }}
                |   {% else %}
                a(href="{{ blog.previous_article.url }}", title="{{ blog.previous_article.title }}")
                    img(src="{{ blog.previous_article.image.src | img_url: 'master' }}" alt="{{ blog.previous_article.title }}").img-load
                    span {{ blog.next_article.title }}
                |   {% endif %}

    | {% render  'myfooter' %}