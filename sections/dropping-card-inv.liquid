{% assign dropping_col_inv = collections[section.settings.dropping_card_inv] %}
<section class="dropping-card dropping-card-inv">
  <div class="dropping-card__hold js-find-hover">
    <div class="dropping-card__bg" style="background:#eaeaea"></div>
    <div class="dropping-card__infos">
      <div class="dropping-card__logo"> <img class="img-load" src="{{ section.settings.img_logo_brand_inv | img_url: 'master' }}" alt="{{ section.settings.img_logo_brand_inv.alt | escape }}"></div><a class="dropping-card__title dharma" href="{{ all_products[section.settings.dropping_card_prod_inv].url | within: collection }}">{{ all_products[section.settings.dropping_card_prod_inv].title }}</a>
      <div class="dropping-card__price recosemi">{{ all_products[section.settings.dropping_card_prod_inv].price | money }}</div>
      <div class="dropping-card__infos__img no-desk"><a href="{{ all_products[section.settings.dropping_card_prod_inv].url | within: collection }}"><img class="img-load" src="{{  all_products[section.settings.dropping_card_prod_inv].featured_image.src  | img_url: 'master' }}" alt="{{ all_products[section.settings.dropping_card_prod_inv].src | escape }}"></a></div>
      <div class="dropping-card__count">
          {% if all_products[section.settings.dropping_card_prod_inv].metafields.drop.drop_month %}
          {% assign drop_day = all_products[section.settings.dropping_card_prod_inv].metafields.drop.drop_day %}
          {% assign drop_month = all_products[section.settings.dropping_card_prod_inv].metafields.drop.drop_month %}
          {% assign drop_hour = all_products[section.settings.dropping_card_prod_inv].metafields.drop.drop_hour %}
        <div class="countdown" data-day="{{ drop_day }}" data-month="{{ drop_month }}" data-hour="{{ drop_hour }}">
          <ul class="countdown__hold">
            <li class="countdown__numbers"><span class="countdown__days">00</span><span class="countdown__hours">00</span><span class="countdown__mins">00</span><span class="countdown__secs">00</span></li>
            <li class="countdown__infos"><span class="infos__days">DAYS</span><span class="infos__hours">HOURS</span><span class="infos__mins">MINS</span><span class="infos__secs">SECS</span></li>
          </ul>
        </div>  {% endif %}
      </div>
      <div class="dropping-card__notify btn-hover"><span class="static">NOTIFY ME</span><span class="hover" data-hover="NOTIFY ME      NOTIFY ME      ">NOTIFY ME      NOTIFY ME      </span></div>
    </div>
    <div class="dropping-card__img no-mobile hover-img"> <a href="{{ all_products[section.settings.dropping_card_prod_inv].url | within: collection }}"> <img class="img-load" src="{{  all_products[section.settings.dropping_card_prod_inv].featured_image.src  | img_url: 'master' }}" alt="{{ all_products[section.settings.dropping_card_prod_inv].src | escape }}"></a></div>
  </div>
</section>{% schema %}
    {
        "name": "MODULE | Dropping Inverse",
        "class": "dropping-card",
        "settings": [
            {
                "id": "dropping_card_prod_inv",
                "type": "product",
                "label": "Product"
            },
            {
                "id": "img_logo_brand_inv",
                "type": "image_picker",
                "label": "Image Logo"
            }
        ],
        "presets": [
            {
            "name": "Dropping Card Inverse",
            "category": "Cards"
            }
        ]
    }
{% endschema %}