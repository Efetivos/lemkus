
{% schema %}
    {
        "name": "FILTER | Tags",
        "blocks": [
            {
                "name": "CATEGORY",
                "type": "tags",
                "settings": [
                    {
                        "id": "cat_title",
                        "type": "text",
                        "label": "FILTERS CATEGORY"
                    },
                    {
                        "id": "each_filter",
                        "type": "text",
                        "label": "Filters",
                        "info": "Insert filters name, separated by comma and space (, ). i.e: 'Adidas, Air, Jordan, Nike' "
                    }
                ]
            }
        ]
    }
{% endschema %}

