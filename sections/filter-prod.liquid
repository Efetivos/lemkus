    <div class="filter-prod__hold">{% for block in section.blocks %}
      <div class="filter-prod__cat">{{ block.settings.cat_title }}</div>
      <ul class="filter-prod__items">
          {% assign filter = block.settings.each_filter | split: ", " %}
          {% for member in filter %}
        <li class="filter-prod__each">{{ member }}</li>  {% endfor %}
      </ul>{% endfor %}
    </div>
