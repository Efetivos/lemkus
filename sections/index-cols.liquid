
{% schema %}
    {
        "name": "Index Collections",
        "settings": [
            {
                "type": "color",
                "id": "color_text_col",
                "label": "Color Text",
                "default": "#ffffff"
            }
        ],

        "name": "Collections Index",
        "blocks": [
            {
                "name": "Collection Index",
                "type": "collections",
                "settings": [
                    {
                        "id": "img_cols",
                        "type": "image_picker",
                        "label": "Collection Image"
                    },
                    {
                        "id": "title_cols",
                        "type": "text",
                        "label": "Collection Title"
                    },
                    {
                        "id": "link_cols",
                        "type": "url",
                        "label": "Collection Link"
                    }
                ]
            }
        ]
    }
{% endschema %}


<section class="cols_index e-hvh e-wvw">
  <div class="cols_index__hold">
    <ul class="cols_index__items">{% for block in section.blocks %}
      <li class="cols_index__each">
        <div class="cols_index__img"><img class="img-load" src="{{ block.settings.img_cols | img_url: 'master' }}" alt="#"></div><a class="cols_index__title dharma" href="{{ block.settings.link_cols }}" title="{{ block.settings.title_cols }}" style="color:{{ section.settings.color_text_col }}">{{ block.settings.title_cols }}</a>
      </li>{% endfor %}
    </ul>
    <div class="drag-this">
      <button class="recosemi">DRAG</button>
    </div>
  </div>
</section>