
{% schema %}
    {
        "name": "INDEX | Just Dropped",
        "class": "dropped-index",
        "settings": [
            {
                "id": "dropped_index",
                "type": "collection",
                "label": "Collection"
            },
            {
                "id": "text_dropped",
                "type": "text",
                "label": "Text Dropped",
                "default": "JUST DROPPED"
            }
        ]
    }
{% endschema %}
{% assign dropped_col = collections[section.settings.dropped_index] %}
<section class="collect-index">
  <h1 class="dharma">{{ section.settings.text_dropped }}</h1>
  <div class="collect-index__hold">
    {% for item in dropped_col.products limit:6 %}
      {% render 'product-card' prod: item %}
    {% endfor %}
  </div>
</section>