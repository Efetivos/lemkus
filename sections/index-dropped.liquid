
{% schema %}
    {
        "name": "INDEX | Just Dropped",
        "class": "dropped-index",
        "settings": [
            {
                "id": "dropped_index",
                "type": "collection",
                "label": "Collection"
            },
            {
                "id": "text_dropped",
                "type": "text",
                "label": "Text Dropped",
                "default": "JUST DROPPED"
            }
        ]
    }
{% endschema %}
{% assign dropped_col = collections[section.settings.dropped_index] %}
<section class="collect-index">
  <h1 class="collect-index__title dharma">{{ section.settings.text_dropped }}</h1>
  <div class="collect-index__hold colle-cards">
    {% for item in dropped_col.products limit: 6 %}
      {% render 'product-card' prod: item %}
    {% endfor %}
  </div>
  <div class="cols_index__drag e-hold no-mobile">
    <div class="drag__cntrl">
      <div class="drag__cntrl__lines">
        <div class="drag-line line-static"></div>
        <div class="drag-line line-dyna"></div>
      </div>
      <button class="drag recosemi" href="#">DRAG</button>
    </div>
  </div>
</section>