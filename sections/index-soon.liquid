{% assign soon_col = collections[section.settings.soon_index] %}
<section class="soon-collect-index">
  <div class="e-hold">
    <h1 class="soon-index__title dharma js-split">{{ section.settings.text_soon }}</h1>
  </div>
  <div class="soon-collect-index__hold colle-cards">
    {% for item in soon_col.products limit:5 %}
      {% render 'product-card' prod: item %}
    {% endfor %}
    <div class="prod-card__each"><a class="view-all-card-soon recosemi" href="#">VIEW ALL </a></div>
  </div>
</section>{% schema %}
    {
        "name": "INDEX | Dropping Soon",
        "settings": [
            {
                "id": "soon_index",
                "type": "collection",
                "label": "Collection"
            },
            {
                "id": "text_soon",
                "type": "text",
                "label": "Text soon",
                "default": "DROPPING SOON"
            }
        ],
        "presets": [
            {
            "name": "Drop Soon",
            "category": "Collections"
            }
        ]
    }
{% endschema %}