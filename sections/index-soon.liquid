
{% schema %}
    {
        "name": "INDEX | Dropping Soon",
        "class": "soon-index",
        "settings": [
            
            {
                "id": "coming",
                "type": "text",
                "label": "Coming",
                "default": "COMING SOON"
            },
            {
                "id": "img_coming",
                "type": "image_picker",
                "label": "Image Coming"
            },
            {
                "id": "title_coming",
                "type": "text",
                "label": "Title Coming"
            },
            {
                "id": "url_coming",
                "type": "url",
                "label": "Link Coming"
            },
            {
                "type": "color",
                "id": "color_text_coming",
                "label": "Color Text",
                "default": "#ffffff"
            },
            {
                "id": "soon_index",
                "type": "collection",
                "label": "Collection"
            },
            {
                "id": "text_soon",
                "type": "text",
                "label": "Text soon",
                "default": "DROPPING SOON"
            }
        ]
    }
{% endschema %}


<section class="soon-index e-wvw">
  <div class="soon-index__hold e-hold">
    <h1 class="soon-index__title dharma">{{ section.settings.text_soon }}</h1>
    <div class="soon-index__coming">
      <div class="soon-index__coming__hold e-wp e-hp e-rel">
        <div class="soon-index__coming__img"><img class="img-load" src="{{ section.settings.img_coming | img_url: 'master' }}" alt="{{ section.settings.img_coming.alt | escape }}"></div>
        <div class="soon-index__coming__texts"><span class="recosemi" style="color:{{ section.settings.color_text_coming }}">{{ section.settings.coming}}</span><a class="dharma" href="{{ section.settings.url_coming }}" title="{{ section.settings.title_coming }}" style="color:{{ section.settings.color_text_coming }}">{{ section.settings.title_coming }}</a></div>
        <div class="soon-index__coming__count no-mobile">
          <div class="countdown" data-day="{{ drop_day }}" data-month="{{ drop_month }}" data-hour="{{ drop_hour }}">
            <ul class="countdown__hold">
              <li class="countdown__numbers"><span class="countdown__days">00</span><span class="countdown__hours">00</span><span class="countdown__mins">00</span><span class="countdown__secs">00</span></li>
              <li class="countdown__infos"><span class="infos__days">DAYS</span><span class="infos__hours">HOURS</span><span class="infos__mins">MINS</span><span class="infos__secs">SECS</span></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>{% assign soon_col = collections[section.settings.soon_index] %}
<section class="soon-collect-index">
  <div class="soon-collect-index__hold colle-cards">
    {% for item in soon_col.products limit:5 %}
      {% render 'product-card' prod: item %}
    {% endfor %}
    <div class="prod-card__each"><a class="view-all-card-soon recosemi" href="#">VIEW ALL </a></div>
  </div>
</section>