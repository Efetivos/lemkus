
{% schema %}
    {
        "name": "Blog",
        "class": "blog-index",
        "settings": [
            {
                "id": "blog-index",
                "type": "blog",
                "label": "Blog"
            },
            {
                "id": "title-blog",
                "type": "text",
                "label": "Title Blog"
            }
        ]
    }
{% endschema %}
{% assign blog = blogs[section.settings.blog-index] %}
<section class="blog-index">
  <div class="blog-index__hold e-hold">
    <div class="blog-index__cult-title">
      <h1 class="t-color dharma">{{ section.settings.title-blog }}</h1><a class="ricosemi" href="{{ shop.url }}/blogs/news">VIEW ALL</a>
    </div>
    <ul class="blog-index__posts">  {% for article in blog.articles limit: 4 %}
      <li class="blog-index__each"><a class="blog-index__img" href="{{ article.url }}" title="{{ article.title }}"><img class="img-load" src="{{ article.image.src | img_url: 'master' }}" alt="{{ article.title }}"></a><a class="blog-index__img dharma" href="{{ article.url }}" title="{{ article.title }}">{{ article.title }}</a></li>  {% endfor %}
    </ul>
  </div>
</section>